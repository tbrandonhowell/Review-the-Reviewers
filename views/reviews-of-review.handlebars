<h1>Review:</h1>

    <h2>{{this.artist}}: {{this.album}}</h2>
    <p><em>&quot;{{this.snippet}}&quot;</em></p>
    <p>by: {{this.author}}</p>
    <p><a href="{{this.url}}">Read Original Review</a></p>
    <p><a href="/leave-review/{{this._id}}">Leave Your Own Review of This Review</a></p>


<h2>Latest Reviews of This Review:</h2>

<div style="border: 1px solid #000000">
    <p>Review Reviewer: Bob Peterson</p>
    <p>This is the review text.</p>
</div>

{{#each comments}}
<div style="border: 1px solid #000000">
    <p>Review Reviewer: {{this.author}}</p>
    <p>{{this.comment}}</p>
    <button class="dropComment" data-id="{{this._id}}">Delete Review</button>
</div>
{{/each}}

<script>

    $(".dropComment").on("click",function(event){
        console.log("attempting to drop " + $(this).data("id"));
        $.post("/api/drop-review",
        { 
            id: $(this).data("id"), 
        },data => {
            console.log("data: " + data);
            console.log("we're in the .then()");
            console.log("attemping to reload the page"); 
            $(this).parent().remove();
        })
    })


